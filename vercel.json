{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/health",
      "dest": "/server/index.js"
    },
    {
      "src": "/metrics",
      "dest": "/server/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "0acf740ed0b204d9e21a1e1b829380866d85d31792e87713123ce3e9d0ffd729eed0764d2fc73a3a63a153f68723c322cad7b21a1539d85178f08e4bab8338c2",
    "NODE_ENV": "production",
    "CORS_ORIGIN": "https://freelancer-app-chi.vercel.app",
    "API_URL": "https://freelancer-app-chi.vercel.app/api"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://freelancer-app-chi.vercel.app/api"
    }
  }
} 